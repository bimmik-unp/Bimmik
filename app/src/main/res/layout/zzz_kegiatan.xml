<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/black"
                android:text="nama"
                android:textStyle="bold"
                android:fontFamily="@font/googlesans_reguler"
                android:id="@+id/kegiatan_tb_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
            <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:text="keter"
                android:fontFamily="@font/googlesans_reguler"
                android:id="@+id/kegiatan_tb_ket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/kegiatan_edit"
                android:tint="@android:color/holo_green_dark"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/kegiatan_hapus"
                android:tint="@android:color/holo_red_dark"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#bebebe"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"/>
</LinearLayout>