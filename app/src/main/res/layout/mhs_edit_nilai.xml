<LinearLayout android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Spinner
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:fontFamily="@font/googlesans_reguler"
        android:layout_marginTop="16dp"
        android:id="@+id/ins_edit_spin_smt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_marginTop="8dp"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:fontFamily="@font/googlesans_reguler"
        android:id="@+id/ins_edit_spin_id_matkul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/googlesans_reguler"
                android:id="@+id/ins_edit_et_sks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sks"
                android:inputType="number"
                android:textColor="@color/item" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:fontFamily="@font/googlesans_reguler"
                android:id="@+id/ins_edit_et_nilai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mutu (A-D)"
                android:digits="ABCD"
                android:maxLength="1"
                android:inputType="textCapSentences"
                android:textColor="@color/item" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <Button
        android:fontFamily="@font/googlesans_reguler"
        android:id="@+id/ins_edit_btn_simpan"
        android:layout_gravity="end"
        style="@style/AppTheme.Button"
        android:layout_marginTop="8dp"
        android:text="Simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>