<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_bimmik"
            android:contentDescription="@null" />

        <TextView
            android:layout_marginTop="24dp"
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans_reguler"
            android:text="Pilih level :"
            android:textSize="@dimen/txt18"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_marginTop="8dp"
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/regis_rb_dosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans_reguler"
                android:text="Dosen"
                android:textSize="@dimen/txt16"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/regis_rb_mhs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/googlesans_reguler"
                android:text="Mahasiswa"
                android:textSize="@dimen/txt16"
                android:textStyle="bold" />
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/regis_nim_textinputlayout"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/regis_et_nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans_reguler"
                android:inputType="number"
                android:textColor="@color/item" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/regis_et_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans_reguler"
                android:hint="Nama lengkap"
                android:inputType="textPersonName"
                android:textColor="@color/item" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:focusable="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/regis_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans_reguler"
                android:hint="@string/login_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/item" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="8dp"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/regis_et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans_reguler"
                android:hint="@string/login_pwd"
                android:inputType="textPassword"
                android:textColor="@color/item" />
        </android.support.design.widget.TextInputLayout>


        <Spinner
            android:layout_marginTop="8dp"
            android:id="@+id/regis_spinner"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="16dp"
            android:id="@+id/regis_btn"
            style="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:drawableStart="@drawable/ic_touch_app_white_24dp"
            android:fontFamily="@font/googlesans_reguler"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Daftar"
            android:textAllCaps="false"
            android:textColor="@color/putih" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
