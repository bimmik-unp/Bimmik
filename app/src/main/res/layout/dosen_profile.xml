<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    tools:context=".mahasiswa.Profile">

    <RelativeLayout
        android:background="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageButton
            android:id="@+id/dosen_profile_logout"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="@dimen/fab_margin"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_exit_to_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/dosen_profile_back"
            android:background="?attr/selectableItemBackground"
            android:layout_margin="@dimen/fab_margin"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/putih"
            app:civ_border_width="1dp"
            android:id="@+id/dosen_profile_img"
            android:src="@mipmap/ic_launcher_round"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/dosen_profile_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dosen_profile_img"
            android:layout_marginLeft="-37dp"
            android:layout_marginBottom="73dp"
            android:layout_toRightOf="@id/dosen_profile_img"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:src="@drawable/ic_camera"
            app:fabSize="mini" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardElevation="0dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="6dp"
            app:contentPadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dosen_profile_et_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ID dosen"
                        android:inputType="number"
                        android:textColor="@color/item" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dosen_profile_et_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama lengkap"
                        android:inputType="textCapWords"
                        android:textColor="@color/item" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dosen_profile_et_oldPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password lama"
                        android:inputType="textPassword"
                        android:textColor="@color/item" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dosen_profile_et_newPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password baru"
                        android:inputType="textPassword"
                        android:textColor="@color/item" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dosen_profile_et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/item" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/dosen_profile_et_noHp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No Hp"
                        android:inputType="number"
                        android:textColor="@color/item" />
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/dosen_profile_btn_save"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/putih"
                    android:text="Simpan"
                    android:background="@drawable/rounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>