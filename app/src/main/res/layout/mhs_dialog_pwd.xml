<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.design.widget.TextInputLayout
        app:passwordToggleEnabled="true"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:fontFamily="@font/googlesans_reguler"
            android:id="@+id/profile_et_oldPd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password lama"
            android:inputType="textPassword"
            android:textColor="@color/item" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        app:passwordToggleEnabled="true"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:fontFamily="@font/googlesans_reguler"
            android:id="@+id/profile_et_newPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password baru"
            android:inputType="textPassword"
            android:textColor="@color/item" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        app:passwordToggleEnabled="true"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:fontFamily="@font/googlesans_reguler"
            android:id="@+id/profile_et_confNewPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Konfirmasi password baru"
            android:inputType="textPassword"
            android:textColor="@color/item" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>