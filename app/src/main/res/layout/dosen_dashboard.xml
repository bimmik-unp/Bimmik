<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".dosen.Dosen_dashboard">

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="@dimen/fab_margin"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dashboard_dosen_img"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:fontFamily="@font/googlesans_reguler"
                android:id="@+id/dosen_dashboard_nama"
                android:text="Nama dosen"
                android:textStyle="bold"
                android:textColor="@color/putih"
                android:textSize="@dimen/txt16"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dashboard_dosen_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/dosen_dashboard_edit"
                android:padding="16dp"
                android:contentDescription="@null"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        android:layout_marginTop="10dp"
        app:contentPadding="16dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/googlesans_reguler"
            android:textStyle="bold"
            android:text="Berikut daftar mahasiswa bimbingan Anda"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/txt16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <ListView
                android:clipToPadding="false"
                android:id="@+id/dosen_list_mhs"
                android:layout_marginTop="8dp"
                android:divider="#dfdfdf"
                android:dividerHeight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>