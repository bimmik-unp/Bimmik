<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="6dp"
        app:contentPadding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Tambah nilai baru"
                android:textSize="@dimen/txt16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_marginTop="16dp"
                android:id="@+id/ins_spin_smt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ins_et_matkul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mata kuliah"
                    android:inputType="textCapWords"
                    android:textColor="@color/item" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ins_et_sks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sks"
                    android:inputType="number"
                    android:textColor="@color/item" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ins_et_nilai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nilai"
                    android:inputType="number"
                    android:textColor="@color/item" />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/ins_btn_simpan"
                android:layout_gravity="end"
                style="@style/AppTheme.Button"
                android:layout_marginTop="8dp"
                android:text="Simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="6dp"
        app:contentPadding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="16dp"
                android:textSize="@dimen/txt16"
                android:text="Daftar nilai anda"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TableLayout
                android:stretchColumns="*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow android:paddingTop="5dp" android:paddingBottom="5dp" android:background="@drawable/tabel_border_head" >
                    <TextView
                        android:textColor="@color/putih"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Mata kuliah" />
                    <TextView
                        android:textColor="@color/putih"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Sks" />
                    <TextView
                        android:textColor="@color/putih"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Nilai" />
                </TableRow>
                <TableRow
                    android:background="@drawable/table_border" android:paddingTop="5dp" android:paddingBottom="5dp">
                    <TextView
                        android:id="@+id/kegiatan_tb_matkul"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/nilai_tb_sks"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/nilai_tb_nilai"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

